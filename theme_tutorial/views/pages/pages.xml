<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="services_page_static" model="website.page">
        <field name="name">Services Page Static</field>
        <field name="website_published" eval="True" />
        <field name="url">/services_static</field>
        <field name="type">qweb</field>
        <field name="key">theme_tutorial.services_page_static</field>
        <field name="arch" type="xml">
            <t t-name="theme_tutorial.services_page_template">
                <t t-call="website.layout">
                    <div class="wrap">
                        <div class="container">
                            <h1>Our Services</h1>
                            <ul class="services">
                                <li>Cloud Hosting</li>
                                <li>Support</li>
                                <li>Unlimited space</li>
                            </ul>
                            <div class="oe_structure" />
                        </div>
                    </div>
                </t>
            </t>
        </field>
    </record>
    <template id="services_page_template">
        <t t-call="website.layout">
            <div class="wrap">
                <div class="container">
                    <h1>Our Services</h1>
                    <ul class="services">
                        <li>Cloud Hosting</li>
                        <li>Support</li>
                        <li>Unlimited space</li>
                    </ul>
                    <div class="oe_structure" />
                </div>
            </div>
        </t>
    </template>
    <record id="services_page_theme" model="theme.website.page">
        <field name="url">/services</field>
        <field name="view_id" ref="services_page_template" />
    </record>
    <record id="services_page_link" model="website.menu">
        <field name="name">Services</field>
        <field name="page_id" ref="services_page_static" />
        <field name="parent_id" ref="website.main_menu" />
        <field name="sequence" type="int">99</field>
    </record>
</odoo>
